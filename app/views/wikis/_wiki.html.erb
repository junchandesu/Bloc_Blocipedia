<%= content_tag :div, class: 'row', id: "wiki-#{wiki.id}" do %>  
	<p><div class="col-md-8">
		<%= link_to wiki.title, wiki %> 
	</div>
	<div class="col-md-2">
		<% if wiki.private && wiki.user == current_user %>
			<div class="btn btn-block btn-warning">Private</div>
		<% elsif wiki.private %>
			<div class="btn btn-block btn-warning">created by <%= wiki.user.name %></div>		
		<% end %>
	</div>
	<div class="col-md-2">
		<% if policy(wiki).edit? %>
			&nbsp&nbsp&nbsp&nbsp&nbsp| <i><%= link_to "EDIT", edit_wiki_path(wiki) %> </i>
		<% end %>
		<% if policy(wiki).destroy? %>
			| <i><%= link_to "DELETE", wiki_path(wiki), method: :delete, remote: true %> </i>|
		<% end %>
	</div></p>
<% end %>